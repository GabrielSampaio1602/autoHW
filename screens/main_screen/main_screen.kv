            # font_style: 'H5'
            bold: True
            pos_hint: {'center_x': 0.5, 'center_y': 0.8}
        
        MDLabel:
            text: 'Select the account:'
            font_style: 'Caption'
            halign: 'center'
            pos_hint: {'center_x': 0.5, 'center_y': 0.6}
                    
        MDRaisedButton:
            id: accounts_btn
            text: 'Accounts'
            text_color: [1, 1, 1, 1]
            pos_hint: {'center_x': 0.5, 'center_y': 0.55}
            size_hint_x: .8
            size_hint_y: 0.07
            on_release: root.show_accs()
                    
